def hesapla(a,b,islem):
    if islem == '+':
        return(str(a) + '+' + str(b) + ' = ' + str(a+b))
    if islem == '-':
        return(str(a)+ '-'+ str(b)+ ' = '+ str(a-b))
    if islem == '*':
        return(str(a) + ' * '+ str(b) + ' = ' + str(a*b))
    if islem == '/':
        return(str(a)+'/'+str(b)+'=',str(a/b))
    
a = int(input('ilk say覺y覺 giriniz:'))
b = int(input('2.say覺y覺 giriniz:'))
islem = input('isleminizi seciniz: +-*/')
hesapla(a,b,islem)
